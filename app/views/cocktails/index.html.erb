<h1>Les cocktails</h1>

<%= link_to 'create', new_cocktail_path, class: 'btn btn-success' %>

<div class="container">
  <div class="row">

  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <h2><%= cocktail.name %></h2>
      <%= link_to "delete", cocktail_path(cocktail), method: :delete, class: 'btn btn-danger' %>
      <%= link_to "details", cocktail_path(cocktail), class: "btn btn-info" %>
    </div>
  <% end %>
  </div>
</div>





